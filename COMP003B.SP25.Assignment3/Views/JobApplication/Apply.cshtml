@model COMP003B.SP25.Assignment3.Models.JobApplication

@{
    ViewData["Title"] = "Job Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Job Application</h2>

<form asp-action="Apply" method="post" novalidate>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExperienceYears"></label>
        <input asp-for="ExperienceYears" class="form-control" />
        <span asp-validation-for="ExperienceYears" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PortfolioURL"></label>
        <input asp-for="PortfolioURL" class="form-control" />
        <span asp-validation-for="PortfolioURL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverLetter"></label>
        <textarea asp-for="CoverLetter" class="form-control"></textarea>
        <span asp-validation-for="CoverLetter" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
