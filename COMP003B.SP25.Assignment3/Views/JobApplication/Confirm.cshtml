@model COMP003B.SP25.Assignment3.Models.JobApplication

@{
    ViewData["Title"] = "Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Application Submitted</h2>

<ul class="list-group">
    <li class="list-group-item"><strong>Full Name:</strong> @Model.FullName</li>
    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
    <li class="list-group-item"><strong>Phone Number:</strong> @Model.PhoneNumber</li>
    <li class="list-group-item"><strong>Years of Experience:</strong> @Model.ExperienceYears</li>
    <li class="list-group-item"><strong>Position:</strong> @Model.Position</li>
    <li class="list-group-item"><strong>Portfolio URL:</strong> @Model.PortfolioURL</li>
    <li class="list-group-item"><strong>Cover Letter:</strong> @Model.CoverLetter</li>
</ul>
